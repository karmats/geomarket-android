<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.geomarket.android.fragment.CreateAccountFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_splash" />

    <EditText
        android:id="@+id/create_account_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_account_name"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <EditText
        android:id="@+id/create_account_email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_account_email"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <EditText
        android:id="@+id/create_account_password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_account_password"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:password="true" />

    <EditText
        android:id="@+id/create_account_password_repeat_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_account_password_repeat"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:password="true" />

    <Button
        style="@style/ActionButton"
        android:text="@string/create_account_create" />

</LinearLayout>
